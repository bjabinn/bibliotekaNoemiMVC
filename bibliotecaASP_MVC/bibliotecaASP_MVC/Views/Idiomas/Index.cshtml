@model IEnumerable<bibliotecaASP_MVC.TIdioma>

@{
    ViewBag.Title = "Gestion de Idiomas";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <br /><br />
    <div>
        @Html.ActionLink("Añadir nuevo idioma", "Create")
    </div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Idioma)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Idioma)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Ver", "Details", new { id=item.ID }) |
                @Html.ActionLink("Borrar", "Delete", new { id=item.ID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
